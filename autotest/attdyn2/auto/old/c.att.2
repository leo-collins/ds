# Dimension of system
NDIM=3
# No boundary conditions
NBC= 0
# No integral conditions
NINT= 0
# Max parameter number
NPAR= 4
# No jacobian
JAC= 0

# Discretization mesh intervals
NTST=  50
# Number collocation points
NCOL=   4
# Mesh adaptation
IAD =   3

# Convergence criterion equation parameters
EPSL= 1e-9
# Convergence criterion solution
EPSU = 1e-9
# Convergence criterion arclength 
EPSS = 1e-7

# Continuation stepsizes
DS  =   0.01, DSMIN= 1E-8, DSMAX=   0.2, IADS=   1

# Principal continuation parameter
ICP =  [3,4,11]

# Detect folds
ILP =   0
# All special solutions
ISP =   2
# No branch switching
ISW = 1
# Sets solution restart label
IRS =   2
# Periodic solutions 
IPS =   2
# Print L2 norm
IPLT= 0

# Stopping condition
UZSTOP={3:10}
# STOP=['HB1']

# For periodic solutions (also default)
THL={11:0.0}
